{% extends "backend/_base.twig" %}
{% block content %}
    <div class="page-header">
        <h1>
            Param√®tres
        </h1>
    </div>

    <form action="{{ urlFor('settings') }}" method="post">
        <div class="form-group">
            <label for="email">Email *</label>
            <input type="text" class="form-control" name="email" id="email" value="{{ post ? post.email : config.user.email }}" required>
        </div>

        <div class="form-group">
            <label for="password">Mot de passe</label>
            <span class="help-block">Laissez vide pour ne pas le changer</span>
            <input type="password" class="form-control" name="password" id="password">
        </div>

        <div class="form-group">
            <label for="adminlink">Lien de l'administration *</label>
            <input type="text" class="form-control" name="adminlink" id="adminlink" value="{{ post ? post.email : config.user.adminLink }}">
        </div>

        <div class="form-actions">
            <input type="submit" class="btn btn-primary" value="Enregistrer" >
            <a href="{{ urlFor('admin') }}" class="btn btn-default">Annuler</a>
        </div>
    </form>
{% endblock %}
