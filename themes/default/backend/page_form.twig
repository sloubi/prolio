{% extends "backend/_base.twig" %}
{% block content %}
    <div class="page-header">
        <h1>
            Modifier la page
        </h1>
    </div>

    <form action="{{ urlFor('page_process', {"id": page.id }) }}" method="post">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label for="name">Nom *</label>
                    <input type="text" class="form-control" name="name" id="name" value="{{ post ? post.name : page.name }}" required>
                </div>
            </div>
        </div>

        <div class="form-group">
            <label for="content">Contenu *</label>
            <span class="help-block">Vous pouvez utiliser du HTML.</span>
            <textarea class="form-control" name="content" id="content" rows="15" required>{{ post ? post.content : page.content }}</textarea>
        </div>

        <div class="form-actions">
            <input type="submit" class="btn btn-primary" value="Modifier la page" >
            <a href="{{ urlFor('page_list') }}" class="btn btn-default">Annuler</a>
        </div>
    </form>
{% endblock %}
