{% set activePage = "projects" %}
{% set pageTitle = "Projets" %}

{% extends "_base.twig" %}
{% block content %}
    <h2>Liste des projets</h2>

    {% if projects %}
        <div class="row">
            {% for project in projects %}
                <div class="col-xs-12 col-sm-6 col-md-4">
                    <a href="{{ urlFor('project', {"id": project.id}) }}" class="thumbnail">
                        <img src="/images/projects/{{ project.image }}" alt="{{ project.name }}" style="height:150px;">
                        <div class="caption">
                            <h3>{{ project.name }} <small class="text-muted">{{ project.version }}</small></h3>
                            <p>{{ project.extract }}</p>
                        </div>
                    </a>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <p>Aucun projet n'est disponible pour l'instant.</p>
    {% endif %}
{% endblock %}
